<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:id="@+id/item_lista_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"

        android:paddingBottom="4dp"
        android:paddingEnd="0dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingRight="0dp"
        android:paddingLeft="8dp">

        <CheckBox
            android:id="@+id/check_box_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/id_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!--<TextView
            android:id="@+id/id_texto_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->

        <EditText
            android:id="@+id/id_texto_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/texto"
            android:imeOptions="actionDone"

            android:maxLines="1" />

        <ImageButton
            android:id="@+id/item_lista_delete"
            android:focusableInTouchMode="false"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0"
            android:padding="0dp"
            app:srcCompat="@mipmap/ic_delete_list_color"
            android:contentDescription=""
            tools:ignore="ContentDescription" />
    </LinearLayout>
</android.support.v7.widget.CardView>
